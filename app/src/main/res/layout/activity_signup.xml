<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    tools:context=".seciondactivity">

    <TextView
        android:id="@+id/tvouttitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up Form"
        android:textSize="18dp"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/colorPrimary"
        android:textAlignment="center"/>


    <TextView
        android:id="@+id/tvusername"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvouttitle"
        android:layout_marginTop="-1dp"
        android:padding="4dp"
        android:text="Full Name:"
        />
    <EditText
        android:id="@+id/txtname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvouttitle"
        android:layout_toRightOf="@id/tvusername"
        android:hint="Enter your full name"
        android:inputType="text"
        />

    <TextView
        android:id="@+id/tvoutaddress"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Address"
        android:padding="4dp"
        android:layout_below="@+id/tvusername"
        />
    <EditText
        android:id="@+id/txtaddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvusername"
        android:layout_toRightOf="@id/tvoutaddress"
        android:hint="Enter your address"
        />

    <TextView
        android:id="@+id/tvoutphone"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Phone No:"
        android:padding="4dp"
        android:layout_below="@+id/tvoutaddress"
        android:inputType="number"
        />
    <EditText
        android:id="@+id/txtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvoutaddress"
        android:layout_toRightOf="@id/tvoutphone"
        android:hint="Enter your Phone Number"
        />
    <RadioGroup
        android:id="@+id/rbtngroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtEmail"
        android:orientation="horizontal"

        >
        <TextView
            android:id="@+id/tvoutputgender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            />
        <RadioButton
            android:id="@+id/rbmale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            />

        <RadioButton
            android:id="@+id/rbfemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"/>
    </RadioGroup>

    <TextView
        android:id="@+id/tvoutpassword"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Password:"
        android:padding="4dp"
        android:layout_below="@+id/rbtngroup"
        />
    <EditText
        android:id="@+id/txtPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rbtngroup"
        android:layout_toRightOf="@id/tvoutpassword"
        android:hint="Enter Password:"
        android:inputType="textPassword">

    </EditText>

    <TextView
        android:id="@+id/tvoutcpassword"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Confirm Password:"
        android:padding="4dp"
        android:layout_below="@+id/tvoutpassword"
        />
    <EditText
        android:id="@+id/txtcPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtPassword"
        android:layout_toRightOf="@id/tvoutcpassword"
        android:hint="Enter Password:"
        android:inputType="textPassword">

    </EditText>
    

</RelativeLayout>